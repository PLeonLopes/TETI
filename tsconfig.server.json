{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",

    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "types": ["node"],

    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "prisma/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "docflow-web",
    "dist"
  ]
}
